<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">

    <Properties>
        <!-- Project root directory -->
        <Property name="logDir">${sys:user.dir}/Logs</Property>

        <!-- Log file names -->
        <Property name="logFile">${logDir}/flipcartTest.log</Property>
        <Property name="logFilePattern">${logDir}/flipcartTest-%d{yyyy-MM-dd}-%i.log</Property>
    </Properties>

    <Appenders>

        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout 
                pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile 
            name="RollingFile"
            fileName="${logFile}"
            filePattern="${logFilePattern}">

            <PatternLayout 
                pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>

            <Policies>
                <OnStartupTriggeringPolicy/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="30 MB"/>
            </Policies>

            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>

</Configuration>